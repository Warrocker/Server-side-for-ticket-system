<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="warrocker.ticketsystem.hibernate.Status" table="status">
        <meta attribute="class-description">
            This class contains the status detail.
        </meta>
        <id name="status" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="caption" column="caption" type="string" insert="false" update="false"/>
        <property name="ucolor" column="caption" type="string"/>


    </class>
</hibernate-mapping>